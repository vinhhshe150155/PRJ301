<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>LoginControl</servlet-name>
        <servlet-class>controller.LoginControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUpControl</servlet-name>
        <servlet-class>controller.SignUpControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListFilm</servlet-name>
        <servlet-class>dal.ListFilm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Flim</servlet-name>
        <servlet-class>model.Flim</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginControl</servlet-name>
        <url-pattern>/LoginControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignUpControl</servlet-name>
        <url-pattern>/SignUpControl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListFilm</servlet-name>
        <url-pattern>/ListFilm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Flim</servlet-name>
        <url-pattern>/Flim</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            43200
        </session-timeout>
    </session-config>
</web-app>
